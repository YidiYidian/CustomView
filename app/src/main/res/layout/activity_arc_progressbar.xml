<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.onlyloveyd.customview.activity.CustomArcProgressBarActivity">

    <SeekBar
        android:id="@+id/sb_indicator"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"/>

    <cn.onlyloveyd.customview.view.ArcView
        android:id="@+id/av_progress"
        app:arcColor="@android:color/holo_green_dark"
        app:bgColor="@android:color/holo_orange_light"
        app:arc_textColor="@color/colorPrimary"
        app:arc_textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="20dp"
        android:src="@mipmap/ic_launcher"
    />


</LinearLayout>
